<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ExternalStorageDemo">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:textSize="30sp"
        android:id="@+id/tv1e"
        android:text="Read and Write in Internal Storage demo"
        android:gravity="center_horizontal"
        />
    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:minLines="6"
        android:layout_below="@+id/tv1e"
        android:id="@+id/et1e"
        android:layout_alignParentRight="true"
        android:layout_alignParentLeft="true"
        >
        <requestFocus> </requestFocus>
    </EditText>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btn_reade"
        android:onClick="Read"
        android:layout_alignRight="@id/et1e"
        android:layout_alignEnd="@id/et1e"
        android:layout_below="@+id/et1e"
        android:text="Read"
        android:layout_marginRight="90dp"
        android:layout_marginTop="70dp"


        />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Store"
        android:id="@+id/btn_writee"
        android:onClick="Write"
        android:layout_alignLeft="@id/et1e"
        android:layout_alignStart="@id/et1e"
        android:layout_below="@+id/et1e"
        android:layout_marginLeft="90dp"
        android:layout_marginTop="70dp"


        />
    <ScrollView
        android:layout_width="match_parent"

        android:layout_below="@id/btn_writee"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tv_reade"
            android:textSize="30dp"

            />
    </ScrollView>
</RelativeLayout>